{
	"name": "DataCollectionAPP",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",

    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"toolsToInstall": "pylint"
		},
		"ghcr.io/va-h/devcontainers-features/uv:1": {
			"version": "latest",
			"shellautocompletion": true
		},
    	"ghcr.io/devcontainers/features/node:1": {
			"version": "16"
    	},
		"ghcr.io/devcontainers-extra/features/ffmpeg-apt-get:1":{}
	},
    "customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode-remote.remote-containers",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.autopep8",
				"ms-azuretools.vscode-containers",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-renderers",
				"ms-azuretools.vscode-docker",
				"atlassian.atlascode",
				"mutantdino.resourcemonitor",
				"streetsidesoftware.code-spell-checker",
				"ms-vscode.makefile-tools",
				"cweijan.vscode-mysql-client2",
				"GitHub.vscode-github-actions",
				"redhat.vscode-yaml"
			]
		}
	},
    "remoteUser": "root",
    "containerEnv": {
		"WORKSPACEFOLDER":"${containerWorkspaceFolder}",
	    "PYTHONPATH":"${containerWorkspaceFolder}/backend"
    },
    "postCreateCommand": "bash /workspaces/Voice-Dataset-Collection/.devcontainer/postCreate.sh"

}
